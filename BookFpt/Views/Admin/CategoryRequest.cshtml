@model IEnumerable<BookFpt.Models.CategoryRequest>

@{
    ViewData["Title"] = "CategoryRequest";
}

<h1>CategoryRequest</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (@item.Status== 0){
                    @Html.DisplayFor(modelItem => "Pending")
                    
                }else{
                    @Html.DisplayFor(modelItem => "Accepted")

                }
            </td>
            <td>
                <a asp-action="Accept" asp-route-id="@item.Id">Accept</a> |
                <a asp-action="Reject" asp-route-id="@item.Id">Reject</a>
            </td>
        </tr>
}
    </tbody>
</table>
